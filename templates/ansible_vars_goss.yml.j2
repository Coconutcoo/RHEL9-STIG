  - name: 'release key 2'
    fingerprint: '567E 347A D004 4ADE 55BA  8A5F 199E 2F91 FD43 1D51'
  - name: 'auxiliary key'
    fingerprint: '6A6A A7C9 7C88 90AE C6AE  BFE2 F76F 66C3 D409 2792'
{% elif ansible_facts.distribution == "Rocky" %}
# rocky
