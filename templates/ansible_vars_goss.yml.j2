gpg_key:
  - name: 'Release Engineering'
    fingerprint: '7051 C470 A929 F454 CEBE  37B7 15AF 5DAC 6D74 5A60'
{% elif ansible_facts.distribution == "AlmaLinux" %}
# Alma
