## metadata for Audit benchmark
benchmark_version: {{ benchmark_version }}

## Benchmark name used by audting control role
# The audit variable found at the base
benchmark: RHEL9-STIG

# turn the categories on/off
rhel9stig_cat1: {{ rhel9stig_cat1 }}
rhel9stig_cat2: {{ rhel9stig_cat2 }}
rhel9stig_cat3: {{ rhel9stig_cat3 }}

# set to redhat/rocky/alma
rhel9stig_os_distribution: {{ ansible_facts.distribution | lower }}

{% if ansible_facts.distribution == "RedHat" %}
# RHEL
